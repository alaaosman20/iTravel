<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackfour"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/select_photo_mode_from_album_btn"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="举报"
        android:textColor="@color/white"
        android:textSize="14sp"
         />
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/height_2_160"
        android:layout_marginBottom="@dimen/height_2_160"
        android:background="@color/whitefour"/>

    <Button
        android:id="@+id/select_photo_mode_from_camera_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="14sp"
        />
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/height_2_160"
        android:layout_marginBottom="@dimen/height_2_160"
        android:background="@color/whitefour"/>
    

    <Button
        android:id="@+id/select_photo_mode_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="取消"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="14sp"
        />

</LinearLayout>