<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/width_10_160">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关于作者"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/height_3_160"
        android:background="@color/grey"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_10_160"
        android:layout_marginTop="@dimen/height_2_160"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ:  "
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/setting_qq_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 309997751 "
            android:textColor="@color/blue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_10_160"
        android:layout_marginTop="@dimen/height_2_160"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSDN:  "
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/setting_csdn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://blog.csdn.net/diyangxia"
            android:textColor="@color/blue"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_10_160"
        android:layout_marginTop="@dimen/height_2_160"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Github:  "
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/setting_github_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://github.com/xmliu"
            android:textColor="@color/blue"/>
    </LinearLayout>
    <com.rey.material.widget.Button
        style="@style/Material.Drawable.Ripple.Wave.Light"
        app:rd_enable="true"
        android:background="@drawable/common_btn_bg"
        android:id="@+id/setting_me_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_10_160"
        android:layout_marginTop="@dimen/height_2_160"
        android:text="确定"
        android:textColor="@color/white"
        />

</LinearLayout>