<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/width_3_160"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/myfeed_item_image"
        android:scaleType="fitXY"
        android:layout_width="@dimen/width_50_160"
        android:layout_height="@dimen/height_30_160"/>

    <TextView
        android:layout_marginLeft="@dimen/width_5_160"
        android:id="@+id/myfeed_item_content"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>