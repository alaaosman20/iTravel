<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <ImageView
         android:padding="@dimen/width_2_160"
        android:id="@+id/phonealbum_item_photo"
        android:layout_width="@dimen/width_40_160"
        android:layout_height="@dimen/width_40_160"
        android:layout_margin="@dimen/width_5_160"
        android:scaleType="centerCrop"
        />
    
    
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/width_15_160"
        android:layout_marginRight="@dimen/width_5_160"
        android:background="@mipmap/common_right_arrow" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/width_10_160"
        android:layout_toRightOf="@+id/phonealbum_item_photo"
          android:layout_marginTop="@dimen/width_10_160"
        android:orientation="vertical" >

        <TextView 
            android:id="@+id/phonealbum_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxWidth="150dip"
            android:singleLine="true"
            android:text="sdsd"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/phonealbum_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdsd"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>