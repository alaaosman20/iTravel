<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/guide_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />


    <ImageView
        android:id="@+id/guide_item_text"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/guide_start_btn"
        android:layout_width="@dimen/width_80_160"
        android:layout_height="@dimen/height_10_160"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/height_15_160"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_other_btn_bg"
        android:text="立即体验"
        android:visibility="gone"
        android:textColor="@color/white"
        />

</RelativeLayout>