<RelativeLayout android:id="@+id/header_select_location_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/width_7_160"
                android:paddingTop="@dimen/width_7_160">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/width_7_160"
        android:text="不显示位置"
        android:textSize="16sp"
        android:textColor="@color/weixin_adddress_color"/>

    <ImageView
        android:id="@+id/header_select_location_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginRight="@dimen/width_7_160"
        />

</RelativeLayout>