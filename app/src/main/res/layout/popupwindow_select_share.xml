<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#EDEDED"
              android:gravity="bottom|center_horizontal"
              android:orientation="vertical"
              android:padding="@dimen/width_8_160">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/share_bottom_sina_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/width_30_160"
                android:layout_height="@dimen/width_30_160"
                android:src="@mipmap/more_icon_weibo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_1_160"
                android:textColor="@color/gray"
                android:text="新浪微博"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_bottom_wechat_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/width_30_160"
                android:layout_height="@dimen/width_30_160"
                android:src="@mipmap/more_icon_weixin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_1_160"
                android:textColor="@color/gray"
                android:text="微信"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_bottom_comments_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/width_30_160"
                android:layout_height="@dimen/width_30_160"
                android:src="@mipmap/more_icon_circlefriends"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_1_160"
                android:textColor="@color/gray"
                android:text="微信朋友圈"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_3_160"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/share_bottom_qq_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/width_30_160"
                android:layout_height="@dimen/width_30_160"
                android:src="@mipmap/more_icon_qq"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_1_160"
                android:textColor="@color/gray"
                android:text="qq"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_bottom_qzone_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/width_30_160"
                android:layout_height="@dimen/width_30_160"
                android:src="@mipmap/more_icon_qzone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_1_160"
                android:textColor="@color/gray"
                android:text="qq空间"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_bottom_sms_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/width_30_160"
                android:layout_height="@dimen/width_30_160"
                android:src="@mipmap/more_icon_mms"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_1_160"
                android:textColor="@color/gray"
                android:text="短信"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/select_photo_mode_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/select_photo_bar_button_height"
        android:layout_marginTop="@dimen/width_10_160"
        android:background="@drawable/select_photo_bar_cancel_bg"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="@dimen/medium_font_size"
        />

</LinearLayout>