<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <com.rey.material.widget.EditText
        android:id="@+id/password_old_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_18_160"
        android:layout_marginRight="@dimen/width_18_160"
        android:layout_marginTop="@dimen/width_18_160"
        android:hint="原密码"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/width_3_160"
        />

    <com.rey.material.widget.EditText
        android:id="@+id/password_new_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_18_160"
        android:layout_marginRight="@dimen/width_18_160"
        android:layout_marginTop="@dimen/width_5_160"
        android:hint="新密码"
        android:textColor="@color/black"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/width_3_160"
       />

    <com.rey.material.widget.EditText
        android:id="@+id/password_new2_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_18_160"
        android:layout_marginRight="@dimen/width_18_160"
        android:layout_marginTop="@dimen/width_5_160"
        android:hint="确认新密码"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/width_3_160"
     />

    <com.rey.material.widget.Button
        style="@style/Material.Drawable.Ripple.Wave.Light"
        android:id="@+id/password_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_10_160"
        android:layout_marginLeft="@dimen/width_18_160"
        android:layout_marginRight="@dimen/width_18_160"
        android:layout_marginTop="15dp"
        android:background="@drawable/common_btn_bg"
        android:text="确 定"
        android:textColor="@color/white"
        />
</LinearLayout>