<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/password_old_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_18_160"
        android:layout_marginRight="@dimen/width_18_160"
        android:layout_marginTop="@dimen/width_18_160"
        android:hint="原密码"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/width_3_160"
        app:met_baseColor="@color/black"
        app:met_clearButton="true"
        app:met_errorColor="@color/red"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="原密码"
        app:met_primaryColor="#982360"
        app:met_textColorHint="@color/gray"
        app:met_underlineColor="@color/gray"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/password_new_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_18_160"
        android:layout_marginRight="@dimen/width_18_160"
        android:layout_marginTop="@dimen/width_5_160"
        android:hint="新密码"
        android:textColor="@color/black"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/width_3_160"
        app:met_baseColor="@color/black"
        app:met_clearButton="true"
        app:met_errorColor="@color/red"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="新密码"
        app:met_primaryColor="#982360"
        app:met_textColorHint="@color/gray"
        app:met_underlineColor="@color/gray"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/password_new2_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_18_160"
        android:layout_marginRight="@dimen/width_18_160"
        android:layout_marginTop="@dimen/width_5_160"
        android:hint="确认新密码"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/width_3_160"
        app:met_baseColor="@color/black"
        app:met_clearButton="true"
        app:met_errorColor="@color/red"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="确认新密码"
        app:met_primaryColor="#982360"
        app:met_textColorHint="@color/gray"
        app:met_underlineColor="@color/gray"/>

    <com.rey.material.widget.Button
        android:id="@+id/password_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_14_160"
        android:layout_marginLeft="@dimen/width_18_160"
        android:layout_marginRight="@dimen/width_18_160"
        android:layout_marginTop="15dp"
        android:background="@color/darkturquoise"
        android:text="确 定"
        android:textColor="#ffffff"
        />
</LinearLayout>